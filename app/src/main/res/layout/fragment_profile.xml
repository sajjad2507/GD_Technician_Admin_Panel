<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.Profile">

  <View
      android:layout_width="match_parent"
      android:background="@color/mGreen"
      android:layout_height="230dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="110dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#F8F8F8"
            android:elevation="16dp"
            app:cardCornerRadius="12dp">


            <com.makeramen.roundedimageview.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/techImage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="44dp"
                android:layout_marginBottom="16dp"
                android:scaleType="centerCrop"
                android:src="@drawable/userprofile"
                app:riv_border_color="#33BFBFBF"
                app:riv_border_width="2dip"
                app:riv_corner_radius="60dip"
                app:riv_mutate_background="true" />

            <TextView
                android:id="@+id/wName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Technicain Name"
                android:gravity="center"
                android:layout_marginTop="144dp"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Toba Tech Singh"
                android:gravity="center"
                android:layout_marginBottom="32dp"
                android:layout_marginTop="170dp"
                android:textSize="15sp"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Home"
            android:layout_marginTop="16dp"
            android:padding="15dp"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#9AD3D3D3"/>

        <TextView
            android:id="@+id/appointments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Appointments"
            android:layout_marginTop="0dp"
            android:padding="15dp"
            android:textStyle="bold"
            android:textSize="18sp"/>

<!--        <View-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="1dp"-->
<!--            android:background="#9AD3D3D3"/>-->

<!--        <TextView-->
<!--            android:id="@+id/search"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Search"-->
<!--            android:layout_marginTop="0dp"-->
<!--            android:padding="15dp"-->
<!--            android:textStyle="bold"-->
<!--            android:textSize="18sp"/>-->

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#9AD3D3D3"/>

        <TextView
            android:id="@+id/requestedAppointments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Requested Appointment"
            android:layout_marginTop="0dp"
            android:padding="15dp"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#9AD3D3D3"/>

        <TextView
            android:id="@+id/logOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LogOut"
            android:layout_marginTop="0dp"
            android:padding="15dp"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#9AD3D3D3"/>

    </LinearLayout>

</FrameLayout>